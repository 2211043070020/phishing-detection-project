{
  "manifest_version": 3,
  "name": "Phishing Detection Tool",
  "version": "1.0.0",
  "description": "Real-time phishing website detection using CatBoost machine learning with 94.97% accuracy",
  "author": "Erla Sai Thoran, Jasti Srujan Chowdary, Pallapolu Niranjan Reddy",
  
  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "scripting"
  ],
  
  "host_permissions": [
    "https://raw.githubusercontent.com/*",
    "https://api.github.com/*",
    "https://networkcalc.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "ui/extension_ui.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "popup/popup.html",
        "popup/popup.css",
        "ui/*",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
